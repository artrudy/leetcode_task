var detectCapitalUse = function(word) {
    let result = false;

    if(word === word.toLowerCase()){
        result = true;
        return result;
        }
    
    if(word === word.toUpperCase()){
        result = true;
        return result;
        }
    
    if (word.toLowerCase() === word.replace(word[0], word[0].toLowerCase())){
        result = true;
        return result;
    } 

    return result
};
console.log(detectCapitalUse("FlaG"))
