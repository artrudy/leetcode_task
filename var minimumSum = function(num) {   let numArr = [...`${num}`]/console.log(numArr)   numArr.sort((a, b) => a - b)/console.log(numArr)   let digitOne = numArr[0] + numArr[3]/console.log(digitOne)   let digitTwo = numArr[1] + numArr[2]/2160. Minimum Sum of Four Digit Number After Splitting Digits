var minimumSum = function(num) {
  let numArr = [...`${num}`]
  // console.log(numArr)
  numArr.sort((a, b) => a - b)
  // console.log(numArr)
  let digitOne = numArr[0] + numArr[3]
  // console.log(digitOne)
  let digitTwo = numArr[1] + numArr[2]
  // console.log(digitTwo)
  return +digitOne + (+digitTwo)
    
};
console.log(minimumSum(4009))
