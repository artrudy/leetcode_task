function median(array) {
  array.sort(function(a, b) {
    return a - b;
  });
//  return array.sort()
if (array.length % 2 != 0) {
  let result = array[Math.floor(array.length / 2)]
  return result
}
if (array.length % 2 === 0) {
  let result = (array[(array.length / 2)- 1] + array[array.length / 2]) / 2
  return result
}
return result
  }
