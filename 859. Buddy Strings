var buddyStrings = function(s, goal) {
    let result = false;
    let stS = []
    let stGoal = []

    if (s.length !== goal.length){
        result =  false;
        return result;
    }
    let sArr  = [...s]
    let goalArr = [...goal]
    console.log(sArr, goalArr)

    for (let i = 0; i < sArr.length; i += 1){
        console.log('sArr[i]',sArr[i])
        console.log(goalArr[i])        
        if (sArr[i] === goalArr[i]){
            sArr.shift();
            goalArr.shift()
            i -= 1
        } else {
            stS.push(sArr[i])
            sArr.shift()
            stGoal.push(goalArr[i])
            goalArr.shift()
            i -= 1;
        }
    }
    if(stGoal.length !== stS.length || stGoal.length > 2 || stS.length > 2){
        result = false;
        return result;
        }
    // console.log(stS, stGoal)
    let resArr = stS.filter(it => stGoal.indexOf(it) < 0)
    let res1Arr = stS.filter((it, index) => it === stGoal[index])
    console.log(res1Arr)

    if (resArr.length === 0 && res1Arr === 0){
        result = true;
        return result
    }
    return result



};
console.log(buddyStrings('aa', 'aa'))
